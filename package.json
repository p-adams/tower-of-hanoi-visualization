{
  "name": "tower-of-hanoi-visualization",
  "version": "1.0.0",
  "description": "Interactive visualization of tower of hanoi puzzle",
  "author": "Paul Adams",
  "private": true,
  "dependencies": {
    "nuxt": "latest"
  },
  "scripts": {
    "deploy": "push-dir --dir=dist --branch=gh-pages --cleanup",
    "dev": "nuxt",
    "test": "ava",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-eslint": "^7.1.1",
    "eslint": "^3.15.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-html": "^2.0.0",
    "eslint-plugin-promise": "^3.4.1",
    "eslint-plugin-standard": "^2.0.1",
    "jsdom": "^11.0.0",
    "push-dir": "^0.4.1"
  }
}
